@model IEnumerable<SistemaGestionIncidencias.Models.Usuario>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Lista de Usuarios</h3>
        </div>
        <div class="card-body">
            <a href="@Url.Action("Create")" class="btn btn-success mb-3">
                <i class="fas fa-user-plus"></i> Crear Nuevo
            </a>
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Es Técnico</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.Email</td>
                            <td>
                                @if (usuario.EsTecnico)
                                {
                                    <span class="badge bg-success">Sí</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = usuario.Id })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit">Editar</i>
                                </a>
                                <a href="@Url.Action("Details", new { id = usuario.Id })" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye">Detalles</i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = usuario.Id })" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt">Eliminar</i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
