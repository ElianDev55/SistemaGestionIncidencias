@model IEnumerable<SistemaGestionIncidencias.Models.Incidencia>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Titulo)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.Prioridad)</th>
            <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
            <th>@Html.DisplayNameFor(model => model.UsuarioReporta)</th>
            <th>@Html.DisplayNameFor(model => model.TecnicoAsignado)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@Html.DisplayFor(modelItem => item.Prioridad)</td>
                <td>@item.FechaCreacion.ToString("yyyy-MM-dd")</td>
                <td>@Html.DisplayFor(modelItem => item.UsuarioReporta)</td>
                <td>@Html.DisplayFor(modelItem => item.TecnicoAsignado)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm">✏ Editar</a>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info btn-sm">🔍 Detalles</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">🗑 Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
